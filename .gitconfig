[include]
	path = ~/.gitconfig_local

[core]
	excludesfile = ~/.gitignore_global
	deltaBaseCacheLimit = 1G

[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =

[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/p4merge/2014.1/p4merge.app/Contents/MacOS/p4merge \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	trustExitCode = true

[alias]
	a = add
        A = add -A
	b = branch
	c = checkout
	co = checkout
	d = diff
	ds = diff --staged
	g = grep
	l = log
	m = commit -m
        p = push
        poo = !git push -u origin $(git branch | grep '^*' | cut -b 3-)
	s = status
	t = tag
        z = clean -fd
	amend = !git commit --amend --date=`date +%s` --no-edit
	alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t = \\2/' | sort
	wip = commit -m 'WIP' -a

[push]
	default = simple

[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
